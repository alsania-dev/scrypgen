# Universal Script Generator Configuration
# Copy this file to .env and configure as needed

# Application Settings
APP_NAME="Universal Script Generator"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=info

# AI/NLP Settings (Optional - for enhanced features)
OPENAI_API_KEY=your_openai_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here
USE_OFFLINE_NLP=true

# GUI Settings
GUI_THEME=alsania-dark
GUI_PORT=3000
ENABLE_TRAY_ICON=true

# Script Generation Settings
DEFAULT_PYTHON_VERSION=3.8
DEFAULT_BASH_SHELL=/bin/bash
SCRIPT_OUTPUT_DIR=./generated_scripts
TEMPLATE_DIR=./src/templates

# Integration Settings
NEMO_ACTIONS_DIR=~/.local/share/nemo/actions
KDE_SCRIPTS_DIR=~/.kde/share/apps/kdeconnect

# Security Settings
ALLOW_SYSTEM_COMMANDS=false
VALIDATE_SCRIPTS=true
SANDBOX_EXECUTION=true

# Development Settings
DEV_MODE=false
ELECTRON_IS_DEV=false
WEBPACK_DEV_SERVER=false