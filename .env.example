# ScrypGen Environment Configuration
# Copy this file to .env and customize the values
# Alsania Protocol v1.0 - Built by Sigma, Powered by Echo

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME=ScrypGen
APP_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=development

# Debug mode (true/false)
DEBUG=false

# Dry run mode - show what would be done without executing (true/false)
DRY_RUN=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=/tmp/scrypgen.log

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_MAX_FILES=5

# =============================================================================
# PATHS AND DIRECTORIES
# =============================================================================

# Base directory for generated scripts
OUTPUT_DIR=./generated

# Directory for temporary files
TEMP_DIR=./temp

# Directory for example files
EXAMPLES_DIR=./examples

# Directory for test files
TEST_DIR=./tests

# Configuration directory
CONFIG_DIR=~/.config/scrypgen

# =============================================================================
# TEMPLATE SETTINGS
# =============================================================================

# Default template language (bash, python, auto)
DEFAULT_LANGUAGE=auto

# Template cache directory
TEMPLATE_CACHE_DIR=./.template_cache

# Enable template validation (true/false)
TEMPLATE_VALIDATION=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Nemo file manager integration
NEMO_ENABLED=true
NEMO_ACTIONS_DIR=~/.local/share/nemo/actions

# KDE Connect integration
KDE_ENABLED=true
KDE_CONFIG_DIR=~/.config/kdeconnect

# VS Code integration
VSCODE_ENABLED=true
VSCODE_EXTENSIONS_DIR=~/.vscode/extensions

# =============================================================================
# NLP AND AI SETTINGS
# =============================================================================

# NLP processing timeout in seconds
NLP_TIMEOUT=30

# Maximum NLP analysis depth
NLP_MAX_DEPTH=5

# Enable AI-powered suggestions (requires compatible AI service)
AI_SUGGESTIONS=false

# AI service endpoint (if using external AI)
AI_ENDPOINT=

# AI API key (keep secure, never commit to version control)
AI_API_KEY=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable security validation
SECURITY_VALIDATION=true

# Maximum script execution time in seconds
MAX_EXECUTION_TIME=300

# Allowed file extensions for input files
ALLOWED_EXTENSIONS=.sh,.py,.txt,.csv,.json

# Maximum file size for input files in MB
MAX_FILE_SIZE=10

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent operations
MAX_CONCURRENT=4

# Memory limit in MB
MEMORY_LIMIT=512

# CPU usage limit (percentage)
CPU_LIMIT=80

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# HTTP timeout in seconds
HTTP_TIMEOUT=30

# Maximum retries for network operations
MAX_RETRIES=3

# User agent string
USER_AGENT=ScrypGen/1.0.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development features
DEV_MODE=false

# Test data directory
TEST_DATA_DIR=./test_data

# Benchmark mode
BENCHMARK=false

# Profile execution
PROFILING=false

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# GitHub API (for template sharing)
GITHUB_TOKEN=
GITHUB_API_URL=https://api.github.com

# IPFS configuration (for decentralized storage)
IPFS_ENABLED=false
IPFS_GATEWAY=http://localhost:8080
IPFS_API=http://localhost:5001

# Database configuration (if using external DB)
DB_TYPE=sqlite
DB_PATH=./scrypgen.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scrypgen
DB_USER=
DB_PASSWORD=

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics export format (json, prometheus, statsd)
METRICS_FORMAT=json

# Metrics export endpoint
METRICS_ENDPOINT=http://localhost:9090

# Health check endpoint
HEALTH_CHECK_ENDPOINT=http://localhost:8080/health

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable beta integrations
BETA_INTEGRATIONS=false

# Enable advanced templates
ADVANCED_TEMPLATES=true

# Enable complex script generation
COMPLEX_SCRIPTS=true

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language for UI and messages
DEFAULT_LOCALE=en_US

# Timezone
TIMEZONE=UTC

# Date format
DATE_FORMAT=YYYY-MM-DD HH:mm:ss

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic backups
AUTO_BACKUP=true

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup retention in days
BACKUP_RETENTION=30

# Backup directory
BACKUP_DIR=./backups

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================

# Enable audit logging
AUDIT_LOGGING=true

# Audit log directory
AUDIT_LOG_DIR=./audit

# Compliance mode (strict, normal, relaxed)
COMPLIANCE_MODE=normal

# Alsania protocol compliance level
ALSANIA_COMPLIANCE=1.0